<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HamroNews" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color for accents -->
        <item name="colorSecondary">@color/red_secondary</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background and surface colors -->
        <item name="background">@color/background</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Optional: Customize typography or shapes if needed -->
    </style>

    <style name="Theme.HamroNews" parent="Base.Theme.HamroNews" />
</resources>